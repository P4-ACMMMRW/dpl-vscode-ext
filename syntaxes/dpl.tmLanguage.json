{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "dpl",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#reserved-words"
		},
		{
			"include": "#ctrl-statements"
		},
		{
			"include": "#stdlib"
		},
		{
			"include": "#function-name"
		},
		{
			"include": "#variable-name"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.dpl",
					"match": "#.*"
				},
				{
					"name": "comment.block.dpl",
					"begin": "/\\*",
					"end": "\\*/"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.dpl",
					"match": "\\b[0-9]+(\\.[0-9]+)?\\b"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.dpl",
					"match": "(==|!=|<=|>=|<|>|\\+|-|\\*|/|%|:|=)"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.dpl",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.dpl",
					"match": "\\\\."
				}
			]
		},
		"reserved-words": {
			"patterns": [
				{
					"name": "keyword.reserved.dpl",
					"match": "\\b(True|False|and|or|not|None)\\b"
				}
			]
		},
		"ctrl-statements": {
			"patterns": [
				{
					"name": "keyword.control.dpl",
					"match": "\\b(def|if|else|break|continue|replace|with|while|return)\\b"
				}	
			]
		},
		"stdlib": {
			"patterns": [
				{
					"name": "support.function.dpl",
					"match": "\\b(print|input|len)\\b"
				}
			]
		},
		"function-name": {
			"patterns": [
				{
					"name": "entity.name.function.dpl",
					"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b(?=\\()"
				}
			]
		},
		"variable-name": {
			"patterns": [
				{
					"name": "variable.other.dpl",
					"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
				}
			]
		}
	},
	"scopeName": "source.dpl"
}
